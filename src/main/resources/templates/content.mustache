<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>
    <meta charset="utf-8" />
    {{#description}}
    <meta content="{{.}}" name="description" />
    {{/description}}
    <meta content="width=device-width, initial-scale=1" name="viewport" />
</head>
<body>
    <article>
        <h1>{{title}}</h1>

        {{#blocks}}
            {{#blockTypes.heading}}
            <h{{properties.level}}>{{properties.text}}</h{{properties.level}}>
            {{/blockTypes.heading}}

            {{#blockTypes.text}}
            <p>
                {{#properties.segments}}
                    {{#textTypes.plain}}{{properties.text}}{{/textTypes.plain}}
                    {{#textTypes.inlineLink}}<a href="{{properties.url}}">{{properties.text}}</a>{{/textTypes.inlineLink}}
                {{/properties.segments}}
            </p>
            {{/blockTypes.text}}

            {{#blockTypes.textList}}
            {{#properties.ordered}}<ol>{{/properties.ordered}}
            {{^properties.ordered}}<ul>{{/properties.ordered}}
                {{#properties.items}}<li>{{.}}</li>{{/properties.items}}
            {{#properties.ordered}}</ol>{{/properties.ordered}}
            {{^properties.ordered}}</ul>{{/properties.ordered}}
            {{/blockTypes.textList}}

            {{#blockTypes.code}}
            <pre><code{{#properties.language}} class="language-{{.}}"{{/properties.language}}>{{properties.content}}</code></pre>
            {{/blockTypes.code}}

            {{#blockTypes.quote}}
            <blockquote>
                <p>{{properties.content}}</p>
                {{#properties.attribution}}<cite>â€” {{.}}</cite>{{/properties.attribution}}
            </blockquote>
            {{/blockTypes.quote}}

            {{#blockTypes.link}}
            <p>
                <a href="{{properties.url}}"{{#properties.external}} target="_blank" rel="noopener"{{/properties.external}}>
                    {{properties.text}}
                </a>
            </p>
            {{/blockTypes.link}}

            {{#blockTypes.image}}
            <figure>
                <img src="{{properties.url}}" alt="{{properties.alt}}" />
                {{#properties.caption}}<figcaption>{{.}}</figcaption>{{/properties.caption}}
            </figure>
            {{/blockTypes.image}}
        {{/blocks}}
    </article>
</body>
</html>
